{
  "name": "practicelink-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:main": "npm run dev --workspace=apps/main-app",
    "dev:admin": "npm run dev --workspace=apps/admin-dashboard",
    "build:main": "npm run build --workspace=apps/main-app",
    "build:admin": "npm run build --workspace=apps/admin-dashboard",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}